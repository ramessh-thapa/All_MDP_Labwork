<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Username!"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop by Categories"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcomeMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:id="@+id/category1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewCategory1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/homeandkitchen"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textViewCategoryDescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home and Kitchen"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewCategory2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/beautyandcare"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textViewCategoryDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beauty and personal care"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewCategory3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/petandsupplies"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textViewCategoryDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Supplies"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewCategory4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/toysandgames"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textViewCategoryDescription4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toys and Games"/>
        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
